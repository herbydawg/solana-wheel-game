{
  "name": "solana-wheel-game",
  "version": "1.0.0",
  "description": "Solana-based meme coin wheel game with real-time holder tracking and automated payouts",
  "main": "server/index.js",
  "scripts": {
    "dev": "concurrently \"npm run server:dev\" \"npm run client:dev\"",
    "server:dev": "nodemon server/index.js",
    "client:dev": "cd client && npm run dev",
    "build": "cd client && npm run build",
    "start": "node server/index.js",
    "install:all": "npm install && cd client && npm install",
    "setup": "node test-setup.js",
    "quick-start": "node test-setup.js && npm run install:all && npm run dev",
    "demo": "cd client && npm run dev",
    "test": "jest",
    "lint": "eslint server/ client/src/",
    "health": "curl http://localhost:5000/health",
    "docker:up": "docker-compose up -d",
    "docker:down": "docker-compose down",
    "docker:logs": "docker-compose logs -f",
    "db:migrate": "node server/database/migrate.js migrate",
    "db:seed": "node server/database/migrate.js seed",
    "db:reset": "node server/database/migrate.js reset",
    "db:status": "node server/database/migrate.js status",
    "db:setup": "npm run db:migrate && npm run db:seed"
  },
  "keywords": [
    "solana",
    "blockchain",
    "meme-coin",
    "wheel-game",
    "crypto",
    "web3"
  ],
  "author": "Solana Wheel Game",
  "license": "MIT",
  "dependencies": {
    "@solana/web3.js": "^1.87.6",
    "@solana/spl-token": "^0.3.9",
    "express": "^4.18.2",
    "socket.io": "^4.7.4",
    "cors": "^2.8.5",
    "dotenv": "^16.3.1",
    "redis": "^4.6.10",
    "pg": "^8.11.3",
    "node-cron": "^3.0.3",
    "axios": "^1.6.2",
    "winston": "^3.11.0",
    "helmet": "^7.1.0",
    "express-rate-limit": "^7.1.5",
    "joi": "^17.11.0",
    "bcryptjs": "^2.4.3",
    "jsonwebtoken": "^9.0.2"
  },
  "devDependencies": {
    "nodemon": "^3.0.2",
    "concurrently": "^8.2.2",
    "jest": "^29.7.0",
    "eslint": "^8.55.0",
    "prettier": "^3.1.0"
  }
}